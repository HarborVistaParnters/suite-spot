<article class="property-preview | panes" data-composition="diptych">
    <div class="flow moderato">
        <h3 id="{{ property.title | slugify }}">{{ property.title }}</h3>
        <p>{{ property.description }}</p>
    </div>
    <img
        src="{{ property.featured_image.src }}"
        alt="{{ property.featured_image.alt }}"
        class="featured"
        eleventy:widths="900"
    >
</article>
