<footer class="site-footer">
    <div class="content-wrapper grid-12">
        <div class="flow presto">
            <a href="/" class="logo">
                {% render 'partials/svg/logo-web-footer.svg' %}
            </a>
            <a href="mailto:{{ navigation.footer.contact }}" class="block-link">{{ navigation.footer.contact }}</a>
        </div>
        <div class="flow allegro">
            {% for entry in navigation.footer.links %}
                <a
                    href="{{ entry.href }}"
                    class="nav-link small-title"
                    {%- if entry.external -%}
                        target="_blank"
                    {%- endif -%}
                >
                    {{- entry.title -}}
                </a>
            {% endfor %}
        </div>
        <div class="flow allegro">
            <a href="https://suitespot.appfolio.com/connect/users/sign_in" target="_blank">Tenant Portal</a>
        </div>
    </div>
    <img
        src="/assets/images/new-sequoia-theater.jpeg"
        alt=""
        class="bg-image"
        eleventy:widths="1400,800"
        sizes="auto"
    >
    <div class="subfooter">
        <div class="content-wrapper cluster">
            <div>
                Â© {{ navigation.footer.copyright }}
                {{ settings.site_name }}
            </div>
            <div>Site design by <a href="https://ds-design-studio.com/" target="_blank">DS Design</a></div>
        </div>
    </div>
</footer>
